{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": false,
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "rootDir": "./src",
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "lib",
    "examples"
  ]
}